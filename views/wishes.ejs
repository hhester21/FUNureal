<% include partials/header %>

<div class="container dynamic-form">
  <div class="row">
    <div class="control-group text-center" id="fields">
      <label class="control-label text-center" for="field1">Enter your wishes here</label>
      <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
          <div class="controls">
            <form role="form" autocomplete="off" action="/wishes" method="post">
              <div id="inputs-div">
                <% if (wishes) { %>
                  <% for (var i=0; i < wishes.length; i++) { %>
                    <div class="entry input-group col-xs-12">
                      <input class="form-control" name="fields[]" type="text" value="<%= wishes[i] %>" placeholder="Type something" />
                      <span class="input-group-btn">
                        <button class="btn btn-danger btn-remove" type="button">
                          <span class="glyphicon glyphicon-minus"></span>
                        </button>
                      </span>
                    </div>
                  <% } %>
                <% } %>
                <div class="entry input-group col-xs-12">
                  <input class="form-control" name="fields[]" type="text" placeholder="Type something" />
                  <span class="input-group-btn">
                    <button class="btn btn-success btn-add" type="button">
                      <span class="glyphicon glyphicon-plus"></span>
                    </button>
                  </span>
                </div>
              </div>
              <div class="form-group text-center">
                <div class="col-xs-12">
                  <button type="submit" id="wishes-submit-button" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </form>
            <br>
          </div>
        </div>
        <div class="col-xs-2"></div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>